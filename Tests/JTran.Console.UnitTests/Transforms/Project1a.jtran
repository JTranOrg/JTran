{
    "#include":                  "*",
    "#variable(cities)":         "#(document(docs, doc1).cities)",
    "#outputvariable(FileName)": "#($DestinationPath + 'oldcustomer.json')",

    "#foreach(@, [])":
    {
        "FullName":    "#(DisplayName(@))",
        "#noobject":   "#DisplayName(Name)",
        "LastName":    "#(Surname)",
        "Age":         "#(Age)",
        "Address":     "#(Address)",
        "City":        "#($cities[0])",
        "Country":      "#($country)"
    }
}